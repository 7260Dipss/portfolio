<%-include("navbar.ejs")%>
<form action="/admin/save_skills" method="post" enctype="multipart/form-data">
    <div class="container bg-dark text-white p-4">
        <h1>Skills Details</h1>
        <div class="row">
            <div class="col-md-5">
                Skill Image
                <input type="file" name="skill_image" class="form-control">
              
            </div>
            <div class="col-md-5">
                Skill Title
                <input type="text" name="skill_title" class="form-control">
            </div>
            <div class="col-md-2">
                <br>
                <button class="btn btn-primary">Save Skill</button>
            </div>
            </div>
            </div>
            </form>
            <br><br><br>
           
<div class="container bg-dark text-white p-4">
    <h1>Skills List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-dark table-sm">
                <tr>
                    <th>Action</th>
                    <th>Srno.</th>
                     <th>Skill Image</th>
                     <th>Skill Title</th>

                </tr>
                <% for(var i =0; i<skills.length;i++){%>
                    <tr>
                    
                        <td>
                            <button class="btn btn-primary btn-sm">
                                <a href="/admin/edit_skill/<%=skills[i].skill_id%>"> <i class="fa fa-edit text-white"></i></a>
                               </button>
                               <button class="btn btn-danger btn-sm">
                                   <a href="/admin/delete_skill/<%=skills[i].skill_id%>"> <i class="fa fa-trash text-white"></i></a>
                               </button>
                    </td>
                    <td><%=i+1%></td>
                    <td>
                    <img src="/<%=skills[i].skill_image%>" width="70px"></td>
                    <td><%=skills[i].skill_title%></td>

                    </tr>
                    <% } %>
                    </table>
                    </div>
                    </div>
                    </div>
                    
            
<%-include("footer.ejs")%>
