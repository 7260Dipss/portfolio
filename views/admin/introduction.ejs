

<%-include("navbar.ejs")%>
<form action="/admin/update_introduction" method="post" enctype="multipart/form-data">
    <div class="container bg-dark text-white p-4">
        <h1>Introduction Page</h1>
        <div class="row">
        <input type="hidden" name="intro_id" value="<%=app_info.intro_id%>">
            <div class="col-md-4 mb-3">
                Enter Name
                <input type="text" name="user_name" class="form-control" value="<%=app_info.user_name%>">
            </div>
    
            <div class="col-md-4 mb-3">
                Enter TagLine
                <input type="text" name="tag_line" class="form-control" value="<%=app_info.tag_line%>">
            </div>
    
            <div class="col-md-2 mb-3">
                Select Photo
                <input type="file" name="user_photo" class="form-control">
                </div>
                <div class="col-md-2 mb-3">
                <img src="/<%=app_info.user_photo%>" width="50px">
            </div>
    
            <div class="col-md-4 mb-3">
                Enter Mobile
                <input type="number" name="user_mobile" class="form-control"  value="<%=app_info.user_mobile%>">
            </div>
    
            <div class="col-md-4 mb-3">
                Enter Email
                <input type="email" name="user_email" class="form-control"  value="<%=app_info.user_email%>">
            </div>
            <div class="col-md-2 mb-3">
                Resume PDF
                   <input type="file" name="resume" class="form-control" accept=".pdf">
               </div>
               <div class="col-md-2 mb-3">
                <a href="/<%=app_info.resume%>">
                <button type="button" class="btn btn-primary btn-sm mt-4">Open Resume</button></a>
               </div> 
    
            <div class="col-md-3 mb-3">
                Enter Linkedin Link
                <input type="url" name="linkedin_link" class="form-control"  value="<%=app_info.linkedin_link%>">
            </div>
    
           
            <div class="col-md-3 mb-3">
                Enter Instagram Link
                <input type="url" name="instagram_link" class="form-control"  value="<%=app_info.instagram_link%>">
            </div>
    
            <div class="col-md-3 mb-3">
                Enter Facebook Link
                <input type="url" name="facebook_link" class="form-control" value="<%=app_info.facebook_link%>">
            </div>
    
            <div class="col-md-3 mb-3">
                Enter Twitter Link
                <input type="url" name="twitter_link" class="form-control" value="<%=app_info.twitter_link%>">
            </div>
            <div class="col-md-12 mb-3">
               About IN Brief
              <textarea name="about_details" class="form-control"><%=app_info.about_details%></textarea>
            </div>
    
            <div class="col-md-12 text-center mb-3 mt-3">
                <button class="btn btn-primary">Update Introduction</button>
            </div>  
        </div>
    </div>
    </form>
    <%-include("footer.ejs")%>